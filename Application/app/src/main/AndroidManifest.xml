<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projectmonterey">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".ProjectMonterey"
        android:allowBackup="true"
        android:icon="@mipmap/camera_cute"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/camera_cute_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.ProjectMonterey">
        <activity
            android:name=".ans_choosing"
            android:exported="false"
            android:theme="@style/NoActionBar"/>
        <activity
            android:name=".CaptureActivity"
            android:exported="false"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".MenuPage"
            android:exported="false"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".settings.set_General"
            android:exported="false"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".settings.AccountSettings"
            android:exported="false"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/NoActionBar"></activity>
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".CameraActivity"
            android:exported="true"
            android:theme="@style/NoActionBar">
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>